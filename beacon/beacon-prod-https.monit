check process beacon-https with pidfile /var/service/pids/prod-https.pid
    start program = "/etc/init.d/beacon prod-https start" with timeout 45 seconds
    stop program = "/etc/init.d/beacon prod-https stop"
    if cpu usage is greater than 60 percent for 2 cycles then alert
    if 2 restarts within 4 cycles then timeout
    alert alerts@grepdata.com

